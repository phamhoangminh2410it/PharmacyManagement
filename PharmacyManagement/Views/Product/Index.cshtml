@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="d-flex justify-content-between align-items-center">
    Danh sách sản phẩm
    <button type="button" class="btn btn-primary" id="openModal">Thêm sản phẩm</button>
</h2>
<p></p>
<div class="input-group">
    <input type="text" class="form-control" placeholder="Tìm kiếm..." aria-label="Tìm kiếm" id="searchInput">
    <button class="btn btn-primary" type="button" id="searchButton">
        <i class="fas fa-search"></i> Tìm kiếm
    </button>
</div>
<p></p>
<div class="table-responsive">
    <table class="table table-bordered table-vcenter table-hover table-normap table-input">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Mã sản phẩm</th>
                <th class="text-center">Tên sản phẩm</th>
                <th class="text-center">Giá bán</th>
                <th class="text-center">Giá giảm</th>
                <th class="text-center">Số lượng tồn</th>
                <th class="text-center">Đơn vị tính</th>
                <th class="text-center">Mô tả</th>
                <th class="text-center">Xuất xứ</th>
                <th class="text-center">Thời gian sản xuất</th>
                <th class="text-center">Thời gian sử dụng</th>
                <th class="text-center">ID Loại sản phẩm</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Thêm sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form -->
                <form id="formModal">
                    <div class="mb-3">
                        <label for="inputName" class="form-label">ID</label>
                        <input type="text" class="form-control" id="inputID" placeholder="Nhập id" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Mã sản phẩm</label>
                        <input type="text" class="form-control" id="inputMa" placeholder="Nhập mã sản phẩm" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="inputTen" placeholder="Nhập tên sản phẩm" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Giá bán</label>
                        <input type="text" class="form-control" id="inputGB" placeholder="Nhập giá bán" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Giá giảm</label>
                        <input type="text" class="form-control" id="inputGG" placeholder="Nhập giá giảm" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Số lượng tồn</label>
                        <input type="text" class="form-control" id="inputSLT" placeholder="Nhập số lượng tồn" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Đơn vị tính</label>
                        <input type="text" class="form-control" id="inputDVT" placeholder="Nhập đơn vị tính" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Mô tả</label>
                        <input type="text" class="form-control" id="inputMT" placeholder="Nhập mô tả" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Xuất xứ</label>
                        <input type="text" class="form-control" id="inputXX" placeholder="Nhập xuất xứ" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Thời gian sản xuất</label>
                        <input type="text" class="form-control" id="inputTGSX" placeholder="Nhập thời gian sản xuất" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Thời gian sử dụng</label>
                        <input type="text" class="form-control" id="inputTGSD" placeholder="Nhập thời gian sử dụng" required>
                    </div><div class="mb-3">
                        <label for="inputName" class="form-label">ID loại sản phẩm</label>
                        <input type="text" class="form-control" id="inputIDLSP" placeholder="Nhập ID loại sản phẩm" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-primary" id="submitForm">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        $('#openModal').click(function() {
            $('#staticBackdrop').modal('show');
        });
    });
</script>