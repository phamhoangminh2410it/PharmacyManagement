<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        justify-content: space-around;
        padding-top: 2rem;
    }

    .card {
        background: linear-gradient(135deg, #ffffff, #f2f4f7);
        border: none;
        padding: 1.5rem;
        width: 200px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.15);
        }

    .icon {
        font-size: 2.5rem;
        color: #007bff;
        margin-bottom: 1rem;
    }

    .card h3 {
        font-size: 1.3rem;
        color: #333;
        margin-bottom: 0.75rem;
    }

    .card p {
        font-size: 2rem;
        color: #007bff;
        font-weight: bold;
    }

    .nav-link {
        display: block;
        margin-top: 1rem;
        font-size: 0.9rem;
        color: #007bff;
        text-decoration: none;
    }

        .nav-link:hover {
            text-decoration: underline;
        }
</style>

