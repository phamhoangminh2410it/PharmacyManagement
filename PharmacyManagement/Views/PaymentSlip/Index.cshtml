@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="d-flex justify-content-between align-items-center">
    Danh sách phiếu chi
    <button type="button" class="btn btn-primary" id="openModal">Thêm phiếu chi</button>
</h2>
<p></p>
<div class="input-group">
    <input type="text" class="form-control" placeholder="Tìm kiếm..." aria-label="Tìm kiếm" id="searchInput">
    <button class="btn btn-primary" type="button" id="searchButton">
        <i class="fas fa-search"></i> Tìm kiếm
    </button>
</div>
<p></p>
<div class="table-responsive">
    <table class="table table-bordered table-vcenter table-hover table-normap table-input">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Số phiếu chi</th>
                <th class="text-center">Ngày chi</th>
                <th class="text-center">ID Nhân viên</th>
                <th class="text-center">Tổng tiền (VND)</th>
                <th class="text-center">Ghi chú</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Thêm phiếu chi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form -->
                <form id="formModal">
                    <div class="mb-3">
                        <label for="inputName" class="form-label">ID</label>
                        <input type="text" class="form-control" id="inputID" placeholder="Nhập id" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Số phiếu chi</label>
                        <input type="text" class="form-control" id="inputSP" placeholder="Nhập số phiếu chi" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Ngày chi</label>
                        <input type="text" class="form-control" id="inputNgay" placeholder="Nhập ngày chi" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">ID nhân viên</label>
                        <input type="text" class="form-control" id="inputIDNV" placeholder="Nhập id nhân viên" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Tổng tiền</label>
                        <input type="text" class="form-control" id="inputTT" placeholder="Nhập tổng tiền" required>
                    </div>
                    <div class="mb-3">
                        <label for="inputName" class="form-label">Ghi chú</label>
                        <input type="text" class="form-control" id="inputGC" placeholder="Nhập ghi chú" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-primary" id="submitForm">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        $('#openModal').click(function() {
            $('#staticBackdrop').modal('show');
        });
    });
</script>
